{
  "name": "@figuren-theater/project_urlname",
  "title": "project_name",
  "description": "Plugin to add ....",
  "author": "project_urlname Plugin Contributors",
  "license": "GPL-3.0+",
  "homepage": "https://github.com/figuren-theater/project_urlname",
  "repository": {
    "type": "git",
    "url": "https://github.com/figuren-theater/project_urlname.git"
  },
  "bugs": {
    "url": "https://github.com/figuren-theater/project_urlname/issues"
  },
  "private": true,
  "devDependencies": {
    "@wordpress/env": "^5.13.0",
    "@wordpress/eslint-plugin": "^14.1.0",
    "@wordpress/scripts": "^25.5.0",
    "eslint": "8.32.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsdoc": "39.6.4",
    "grunt": "1.5.3",
    "grunt-contrib-clean": "2.0.1",
    "grunt-contrib-copy": "1.0.0",
    "grunt-shell": "4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "13.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.3"
  },
  "scripts": {
    "build": "grunt build; grunt create-build-zip",
    "check-engines": "wp-scripts check-engines",
    "packages-update": "wp-scripts packages-update",
    "check-licenses": "wp-scripts check-licenses --production",
    "pre_deploy": "grunt pre_deploy",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "wp-scripts lint-js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:js:report": "npm run lint:js -- --output-file lint-js-report.json --format json .",
    "lint:php": "vendor/bin/phpcs",
    "lint:php:fix": "vendor/bin/phpcbf",
    "lint:pkg-json": "wp-scripts lint-pkg-json --ignorePath .gitignore",
    "lint:staged": "lint-staged",
    "test": "npm-run-all --parallel test:*",
    "test:php": "wp-env run phpunit 'WORDPRESS_TABLE_PREFIX=wptests_ /var/www/html/wp-content/plugins/project_urlname/vendor/bin/phpunit -c /var/www/html/wp-content/plugins/project_urlname/phpunit.xml.dist $npm_config_args'",
    "test:php:xdebug": "wp-env run tests-wordpress 'env PHP_IDE_CONFIG=serverName=project_name WORDPRESS_TABLE_PREFIX=wptests_ WP_PHPUNIT__TESTS_CONFIG=/var/www/html/phpunit-wp-config.php /var/www/html/wp-content/plugins/project_urlname/vendor/bin/phpunit -c /var/www/html/wp-content/plugins/project_urlname/phpunit.xml.dist $npm_config_args'",
    "prepare": "husky install",
    "env:clean": "wp-env clean all",
    "env:destroy": "wp-env destroy",
    "env:start": "wp-env start --xdebug",
    "env:stop": "wp-env stop",
    "env:wp": "wp-env run cli wp",
    "wp-env": "wp-env"
  },
  "npmpackagejsonlint": {
    "extends": "@wordpress/npm-package-json-lint-config",
    "rules": {
      "require-version": "off"
    }
  }
}
